<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lll"
    tools:context=".helpCenter">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Help Center"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:textColor="@color/bluedark"
            android:textSize="18dp"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>

    <ImageView

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/circlee"
        android:rotation="45    "
        android:layout_marginLeft="320dp"/>

    <Button android:id="@+id/close"

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:layout_marginLeft="318dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:text="FAQ"
            android:padding="10dp"
            android:textColorHint="@color/bluedark"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="120dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:text="How to order on Mylocker?"
            android:padding="10dp"
            android:drawableEnd="@drawable/ic_next"
            android:textStyle="bold"
            android:textColor="@color/bluedark"
            android:textColorHint="@color/bluedark"
            android:textSize="15dp" />

    </LinearLayout>

    <Button android:id="@+id/p1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="120dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="170dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:text="How to refill balance?"
            android:padding="10dp"
            android:drawableEnd="@drawable/ic_next"
            android:textStyle="bold"
            android:textColor="@color/bluedark"
            android:textColorHint="@color/bluedark"
            android:textSize="15dp" />

    </LinearLayout>

    <Button android:id="@+id/p2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="170dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="220dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:text="Why can't i order a locker?"
            android:padding="10dp"
            android:drawableEnd="@drawable/ic_next"
            android:textStyle="bold"
            android:textColor="@color/bluedark"
            android:textColorHint="@color/bluedark"
            android:textSize="15dp" />

    </LinearLayout>

    <Button android:id="@+id/p3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="220dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="270dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:text="Why i can't scan during the order process?"
            android:padding="10dp"
            android:drawableEnd="@drawable/ic_next"
            android:textStyle="bold"
            android:textColor="@color/bluedark"
            android:textColorHint="@color/bluedark"
            android:textSize="15dp" />

    </LinearLayout>

    <Button android:id="@+id/p4"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="270dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="320dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:text="Can i borrow more than one locker?"
            android:padding="10dp"
            android:drawableEnd="@drawable/ic_next"
            android:textStyle="bold"
            android:textColor="@color/bluedark"
            android:textColorHint="@color/bluedark"
            android:textSize="15dp" />

    </LinearLayout>

    <Button android:id="@+id/p5"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="320dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="380dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:text="Are there any other question?"
            android:padding="10dp"
            android:textColorHint="@color/bluedark"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="500dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:text="Telephone"
            android:layout_marginTop="6dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColorHint="@color/bluedark"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"

            android:layout_height="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:text="12345667"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="@color/bluedark"
            android:textColorHint="@color/bluedark"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="440dp"
        android:drawableEnd="@drawable/ic_next"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:text="Email"
            android:layout_marginTop="6dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColorHint="@color/bluedark"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"

            android:layout_height="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:text="Mylocker@gmail.com"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="@color/bluedark"
            android:textColorHint="@color/bluedark"
            android:textSize="12dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="455dp"
        android:src="@drawable/email" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="515dp"
        android:src="@drawable/call" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="570dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:text="24 hours customer service, monday to sunday, including national holidays"
            android:padding="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColorHint="@color/bluedark"
            android:textSize="10dp" />

    </LinearLayout>







</RelativeLayout>