<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".Login">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bluedark"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SIGN IN"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />


    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_back"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"/>

    <Button android:id="@+id/btnBack"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:layout_marginLeft="15dp"/>


    <!--<ImageView-->
        <!--android:layout_width="60dp"-->
        <!--android:layout_height="60dp"-->
        <!--android:background="@drawable/circleabu"-->
        <!--android:src="@drawable/ic_user"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="80dp"/>-->

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/circle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"/>


    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/go"
        android:background="@drawable/circle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/bluedark"
        android:layout_marginTop="550dp">
    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="190dp"/>

    <EditText
        android:id="@+id/email"

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="25dp"
        android:background="@color/lll"
        android:drawableLeft="@drawable/ic_emaill"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/bluedark"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/password"

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="25dp"
        android:background="@color/lll"
        android:drawableLeft="@drawable/ic_https_black_24dp"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/bluedark"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/show"

        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="255dp"
        android:layout_marginTop="350dp"
        android:text="show"
        android:textColor="@color/white" />


    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="400dp"
        android:layout_marginRight="30dp"
        android:background="@color/bluedark"
        android:text="Sign in"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lupaPass"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="465dp"
        android:hint="Forgot your login details?"
        android:textColorHint="@color/bluedark" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="20dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="570dp"
        android:text="Not have an account?"
        android:textAllCaps="false"
        android:textColor="@color/bluedark" />

    <TextView
        android:id="@+id/textRegis"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="570dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/bluedark"
        android:textStyle="bold" />




</RelativeLayout>
