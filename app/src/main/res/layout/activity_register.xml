<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lll"
    tools:context=".Register">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bluedark"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SIGN UP "
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_back"/>

    <Button android:id="@+id/btnBack"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"/>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/lll">

            <LinearLayout
                android:id="@+id/linearLay"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/bluedark"
                android:gravity="center"
                android:orientation="vertical" />

            <ImageView
                android:id="@+id/imgbg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:src="@drawable/ic_account" />


            <ImageView
                android:id="@+id/imageview"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/linearLay"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-13dp"
                android:rotation="45"
                android:src="@color/bluedark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="130dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/name"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/ic_user"
                    android:drawablePadding="10dp"
                    android:hint="User Name"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="@color/bluedark"
                    android:textColorHint="@color/bluedark"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/email"

                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/ic_emaill"
                    android:drawablePadding="10dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="@color/bluedark"
                    android:textColorHint="@color/bluedark"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/nohp"

                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="10dp"
                    android:hint="Nomor Handphone"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/bluedark"
                    android:textColorHint="@color/bluedark"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/pass"

                        android:layout_width="230dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/ic_https_black_24dp"
                        android:drawablePadding="10dp"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:textColor="@color/bluedark"
                        android:textColorHint="@color/bluedark"
                        android:textSize="15dp" />

                    <CheckBox
                        android:id="@+id/unhide"

                        android:layout_width="94dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="show"
                        android:textColor="@color/bluedark" />

                </LinearLayout>

                <EditText
                    android:id="@+id/C_pass"

                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/ic_https_black_24dp"
                    android:drawablePadding="10dp"
                    android:hint="Confirm Your Password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="@color/bluedark"
                    android:textColorHint="@color/bluedark"
                    android:textSize="15dp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressbar"

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="373dp" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_marginLeft="50dp"
                android:background="@color/abu"
                android:layout_marginTop="480dp">

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_marginLeft="220dp"
                android:background="@color/abu"
                android:layout_marginTop="480dp">

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="470dp"
                android:text="OR"
                android:textColor="@color/bluedark"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="500dp"
                android:layout_marginLeft="30dp"
                android:text="Log In With Google"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/bluedark"
                android:gravity="center"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/google"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="490dp"/>


            <Button
                android:id="@+id/btn_regis"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="410dp"
                android:layout_marginRight="20dp"
                android:background="@color/bluedark"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:text="Already have an account?"
                android:textAllCaps="false"
                android:layout_marginTop="545dp"
                android:textColor="@color/bluedark" />

            <TextView
                android:id="@+id/textLogin"

                android:layout_width="103dp"
                android:layout_height="20dp"
                android:layout_marginLeft="250dp"
                android:text="Login."
                android:textAllCaps="false"
                android:layout_marginTop="545dp"
                android:textColor="@color/bluedark"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/abu"
                android:layout_marginTop="530dp">

            </LinearLayout>





        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>