                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date Order"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/bluedark"
                    android:textSize="13dp"
                    android:textStyle="bold" />

